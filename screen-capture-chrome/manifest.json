{
  "name": "Desktop Capture for Chrome",
  "description":
    "Allows you to capture your desktop for use in video applications",
  "version": "0.1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["extension.js"],
    "persistent": false
  },
  "externally_connectable": {
    "matches": ["*://localhost/*", "*://45266606.ngrok.io/*"]
  },
  "permissions": ["desktopCapture"]
}
